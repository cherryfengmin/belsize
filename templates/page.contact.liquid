<!-- /templates/page.contact.liquid -->
<div class="grid">

  <div class="grid__item large--five-sixths push--large--one-twelfth">

    <header class="section-header text-center">
      <h2>{{ page.title }}</h2>
    </header>

    <div class="grid">
      <div class="grid__item page-main">
        <div class="feature-row" >
          <div class="feature-row__item feature-row__text">
            <div class="rte rte--nomargin rte--indented-images">
          {{ page.content }}
              {% section 'contact-section'%}
        </div>
          </div>
          <div class="feature-row__item">
            <div class="form-vertical">
          {% form 'contact' %}

            {% comment %}
              Successful message
            {% endcomment %}
            {% if form.posted_successfully? %}
              <p class="note form-success">
                {{ 'contact.form.post_success' | t }}
              </p>
            {% endif %}

            {{ form.errors | default_errors }}

            <div class="grid grid--small">
              <div class="grid__item large--one-half">
                <label for="ContactFormName" class="label required">{{ 'contact.form.name' | t }}</label>
                <input type="text" id="ContactFormName" required class="input-full" name="contact[{{ 'contact.form.name' | t }}]"  autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
              </div>

              <div class="grid__item large--one-half">
                <label for="ContactFormEmail" class="label required">{{ 'contact.form.email' | t }}</label>
                <input type="email" id="ContactFormEmail" required class="input-full" name="contact[email]"  autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
              </div>
            </div>

            <label for="ContactFormMessage" class="label required">{{ 'contact.form.message' | t }}</label>
            <textarea rows="3" required id="ContactFormMessage" class="input-full" name="contact[{{ 'contact.form.message' | t }}]" >{% if form.body %}{{ form.body }}{% endif %}</textarea>

            <input type="submit" class="btn center" value="{{ 'contact.form.send' | t }}">

          {% endform %}
        </div>
          </div>
        </div>
        

        
      </div>
    </div>

  </div>

</div>
